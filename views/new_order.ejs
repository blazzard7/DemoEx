<h1>Создать заявку</h1>

<form action="/ord" method="POST">
  <label for="number">Номер заказа:</label>
  <input type="number" id="number" name="number" required><br>

  <label for="date">Дата:</label>
  <input type="date" id="date" name="date" required><br>

  <label for="device">Устройство:</label>
  <input type="text" id="device" name="device" required><br>

  <label for="problemType">Тип проблемы:</label>
  <input type="text" id="problemType" name="problemType" required><br>

  <label for="description">Описание:</label>
  <textarea id="description" name="description" required></textarea><br>

  <label for="client">Клиент:</label>
  <input type="text" id="client" name="client" required><br>

  <label for="status">Статус:</label>
  <select id="status" name="status" required>
    <option value="В ожидании">В ожидании</option>
    <option value="В работе">В работе</option>
    <option value="Выполнено">Выполнено</option>
  </select><br>


  <label for="employee">Сотрудник:</label>
  <input type="text" id="employee" name="employee" required><br>


  <button type="submit">Создать</button>
</form>